<h1>Editing patient</h1>

<div class='row'>
  <div class='col-md-4 text-center mx-auto'>
    <%= form_with model: @patient do |form| %>
      <div class="mb-3">
        <%= form.label :name, class:"form-label" %>
        <%= form.text_field :name, class:"form-control", placeholder:"Your Name ..." %>
      </div>
      <div class="mb-3">
        <%= form.label :email, class:"form-label" %>
        <%= form.text_field :email, class:"form-control", placeholder:"Your Email ..." %>
      </div>
      <div class="mb-3">
        <%= form.label :problem, class:"form-label" %>
        <%= form.text_area :problem, class:"form-control", placeholder:"Your Problem ..." %>
      </div>
      <div>
        <%= form.submit "Update patient", class:"btn btn-success" %>
      </div>
    <% end %>
    <div class="mt-3">
  <%= link_to "Back to patients", patients_path, class:"" %>
</div>
      <div class="mt-3">
      <%= link_to "Show this patient", @patient %>
      </div>
  </div>
</div>



